    <!-- Base application theme. -->
    <style name="Theme.OpenUPFinal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#565656</item>
        <!-- Customize your theme here. -->
        <item name="text_color">#454545</item>
        <item name="customCardColor">@color/white</item>
        <item name="customBackGroundColor">#F0F2F2</item>
        <item name="customBottomNavColor">#DAD7D7</item>
    </style>

