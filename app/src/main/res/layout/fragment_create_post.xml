<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/customBackGroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:orientation="vertical"
    tools:context=".ui.fragments.createPostFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="?attr/text_color"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create New Post"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/desITv"
        android:layout_width="match_parent"
        android:hint="Description"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopStart="20dp"
        android:layout_margin="20dp"
        android:textColorHint="?attr/text_color"
        app:hintTextColor="?attr/text_color"
        app:boxBackgroundColor="?attr/customCardColor"
        app:boxStrokeColor="?attr/text_color"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/postDesETv"
            android:textColor="?attr/text_color"
            android:gravity="start"
            android:textColorHint="?attr/text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="18" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/createPostBtn"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post" />
</LinearLayout>
</ScrollView>
